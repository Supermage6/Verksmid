from dfplayer import DFPlayer
import time

def play_audio(file_number, folder_number=1, volume=25):
    """
    Spila hlj√≥√∞skr√° me√∞ DFPlayer snertim√≥du.
    
    Args:
        file_number (int): N√∫mer hlj√≥√∞skr√°rinnar sem √° a√∞ spila.
        folder_number (int): N√∫mer m√∂ppunnar sem inniheldur hlj√≥√∞skr√°na.
        volume (int): Hlj√≥√∞styrkur (0-30).
    """
    try:
        # Frumstilla DFPlayer me√∞ stillingum UART
        df = DFPlayer(uart_id=1, tx_pin_id=4, rx_pin_id=5)

        # B√≠√∞a √≠ sm√° t√≠ma √æanga√∞ til DFPlayer er tilb√∫inn
        time.sleep(1)

        # Auka hlj√≥√∞styrk um 50%
        aukinn_hljodstyrkur = min(30, volume + int(0.5 * volume))  # Tryggja a√∞ hlj√≥√∞styrkurinn s√© ekki meiri en 30
        df.volume(aukinn_hljodstyrkur)
        time.sleep(0.2)

        # Spila skr√°
        df.play(folder_number, file_number)
    except Exception as e:
        print("Villa kom upp:", e)

# D√¶mi um notkun
if __name__ == "__main__":
    file_number = 001  # D√¶mi um n√∫mer hlj√≥√∞skr√°ar
    folder_number = 01  # D√¶mi um n√∫mer m√∂ppu
    volume = 100  # D√¶mi um hlj√≥√∞styrk
    play_audio(file_number, folder_number, volume)


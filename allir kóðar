from dfplayer import DFPlayer
import time

def play_audio(file_number, folder_number=1, volume=25):
    """
    Spila hlj칩칧skr치 me칧 DFPlayer snertim칩du.
    
    Args:
        file_number (int): N칰mer hlj칩칧skr치rinnar sem 치 a칧 spila.
        folder_number (int): N칰mer m칬ppunnar sem inniheldur hlj칩칧skr치na.
        volume (int): Hlj칩칧styrkur (0-30).
    """
    try:
        # Frumstilla DFPlayer me칧 stillingum UART
        df = DFPlayer(uart_id=1, tx_pin_id=4, rx_pin_id=5)

        # B칤칧a 칤 sm치 t칤ma 쬬nga칧 til DFPlayer er tilb칰inn
        time.sleep(1)

        # Auka hlj칩칧styrk um 50%
        aukinn_hljodstyrkur = min(30, volume + int(0.5 * volume))  # Tryggja a칧 hlj칩칧styrkurinn s칠 ekki meiri en 30
        df.volume(aukinn_hljodstyrkur)
        time.sleep(0.2)

        # Spila skr치
        df.play(folder_number, file_number)
    except Exception as e:
        print("Villa kom upp:", e)

# D칝mi um notkun
if __name__ == "__main__":
    file_number = 001  # D칝mi um n칰mer hlj칩칧skr치ar
    folder_number = 01  # D칝mi um n칰mer m칬ppu
    volume = 100  # D칝mi um hlj칩칧styrk
    play_audio(file_number, folder_number, volume)

